{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    // "verbatimModuleSyntax": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@components/base": [ "features/base/components" ],
      "@components/project": [ "features/project/components" ],
      "@constants/*": [ "constants/*" ],
      "@hooks/base": [ "features/base/hook/base.hook" ],
      "@hooks/settings": [ "features/settings/hook/settings.hook" ],
      "@layouts/base": [ "features/base/layouts" ],
      "@models/base": [ "features/base/model/base.model" ],
      "@models/settings": [ "features/settings/model/settings.model" ],
      "@providers/base": [ "features/base/provider/base.provider" ],
      "@services/base": [ "features/base/service/base.service" ],
      "@services/settings": [ "features/settings/service/settings.service" ],
      "@views/base": [ "features/base/views" ],
      "@views/org": [ "features/org/views" ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
