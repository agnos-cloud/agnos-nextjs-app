{
  "compilerOptions": {
    "target": "es2017",
    "module": "esnext",
    "emitDecoratorMetadata": true,
    "importHelpers": true,
    "declaration": true,
    "sourceMap": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "strictFunctionTypes": true,
    "strictPropertyInitialization": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": true,
    // "verbatimModuleSyntax": true,
    "noUnusedParameters": true,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": true,
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "jsx": "preserve",
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "incremental": true,
    "isolatedModules": true,
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "baseUrl": "./",
    "paths": {
      "@components": [ "components" ],
      "@components/base": [ "features/base/components" ],
      "@components/canvas": [ "features/canvas/components" ],
      "@components/model": [ "features/model/components" ],
      "@components/project": [ "features/project/components" ],
      "@constants/*": [ "constants/*" ],
      "@hooks/base": [ "features/base/hook" ],
      "@hooks/org": [ "features/org/hook/org.hook" ],
      "@hooks/project": [ "features/project/hook/project.hook" ],
      "@hooks/settings": [ "features/settings/hook/settings.hook" ],
      "@layouts/base": [ "features/base/layouts" ],
      "@models/base": [ "features/base/model/base.model" ],
      "@models/canvas": [ "features/canvas/model/canvas.model" ],
      "@models/collaboration": [ "features/collaboration/model/collaboration.model" ],
      "@models/membership": [ "features/membership/model/membership.model" ],
      "@models/model": [ "features/model/model/model.model" ],
      "@models/settings": [ "features/settings/model/settings.model" ],
      "@models/org": [ "features/org/model/org.model" ],
      "@models/project": [ "features/project/model/project.model" ],
      "@models/user": [ "features/user/model/user.model" ],
      "@providers/base": [ "features/base/provider/base.provider" ],
      "@services/base": [ "features/base/service/base.service" ],
      "@services/canvas": [ "features/canvas/service/canvas.service" ],
      "@services/collaboration": [ "features/collaboration/service/collaboration.service" ],
      "@services/membership": [ "features/membership/service/membership.service" ],
      "@services/model": [ "features/model/service/model.service" ],
      "@services/org": [ "features/org/service/org.service" ],
      "@services/project": [ "features/project/service/project.service" ],
      "@services/settings": [ "features/settings/service/settings.service" ],
      "@styles/*": [ "styles/*" ],
      "@types": [ "types" ],
      "@utils/*": [ "utils/*" ],
      "@views/base": [ "features/base/views" ],
      "@views/org": [ "features/org/views" ],
      "@views/project": [ "features/project/views" ],
      "@views/shared": [ "features/shared/views" ],
    }
  },
  "exclude": [
    "node_modules"
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx"
  ]
}
